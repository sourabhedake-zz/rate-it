<div class="col-md-10">
	<div class="row">
		<h1>Add subcategory</h1>

		<%= simple_form_for [@category, Subcategory.new] do |f| %>

		<div class="form-inputs">
			<%= f.input :subcategory_name %>
		</div>
		<div class="form-actions">
			<%= f.button :submit, "Add",:class => "btn-primary" %>
		</div>
		<% end %>
	</div>
</div>
